extends ./layout/layout.jade

block stylesheets
    link(
        rel="stylesheet"
        href="/static/#{appName}/css/detail.css"
    )

block content
    div.container-fluid
        div.row-fluid(style='margin-top: 20px;')
            div.page-main.package-details.span9
                div.container-fluid
                    h1
                        a(href='/#{appName}/components') Components
                        i.icon-chevron-right(style='font-size: 72%; color: #999; margin: 0 0.25em;')
                        | #{component.name}
                    p.description #{component.description}
                    pre.sh.sh_sourceCode
                        code
                            $ fis component install #{component.name}
                    div.downloads 一共下载 #{component.totaldowns} 次
                    table.table.package-details-table
                        tbody
                            tr
                                th 版本
                                td #{component.version}
                            tr
                                th 发布时间
                                td #{component['updateTime']}
                            if component.keywords
                                tr
                                    th 关键词
                                    td
                                        for keyword in component.keywords
                                            span.keyword #{keyword},
                            tr.owners
                                th 维护者
                                td
                                    ul
                                        for maintainer in component.maintainers
                                            li.owner(rel= maintainer.name)
                                                a.user-link(href='/#{appName}/user_detail?name=#{maintainer.name}') #{maintainer.name}
                            tr
                                th 下载包
                                td component download url
                    div#readme
                        h3.filename
                            i.icon-book
                            | README.md
                        div.data!= readmeContent
